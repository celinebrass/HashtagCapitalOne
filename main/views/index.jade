extends layout

block linkedStyles
  link(rel='stylesheet', href='http://cdn.datatables.net/plug-ins/f2c75b7247b/integration/bootstrap/3/dataTables.bootstrap.css')
  link(rel='stylesheet', href='/stylesheets/datatables.css')
  style.
    #recentActivity tr td:last-child {
      white-space: nowrap;
      width: 1px;
      text-align: right;
    }

block content
  .row
    .col-sm-1
    .col-sm-8
      h1 Recent Activity
      p Below are the 20 most recent posts with the tag "#CapitalOne". Click on a post to expand user data. Still have questions about sentiment analysis and want to see a cool graph? See the "trends" page!
    .col-sm-2
  .row
    .col-sm-1
    .col-sm-10
      table#recentActivity.table.table-striped.table-hover.table-bordered
        thead
          th Picture
          th Full Name   
          th Username
          th Post
          th Date
          th Likes
          th Sentiment
          th Score
        tbody
      br
      br

block linkedScripts
  script(src='//cdn.datatables.net/1.10.5/js/jquery.dataTables.js')
  script(src='http://cdn.datatables.net/plug-ins/f2c75b7247b/integration/bootstrap/2/dataTables.bootstrap.js')
  script(src='/javascripts/recentActivity.js')
